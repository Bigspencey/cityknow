<div class="container">
  <%= render 'layouts/errors' if flash[:errors] %>
  <%= form_for @city do |f| %>
    <div class="form-group">
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </div>
    <div class="form-group">
      <%= f.label :description %><br>
      <%= f.text_area :description, :placeholder => "Enter information here", :cols => "80", :rows => "5" %>
    </div>
    <%= f.submit 'Submit', :class => "btn btn-success" %>
  <% end %>
</div>


